<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="50dp">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Demo BroadcastReceiver"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp" />

    <!-- Trạng thái mode -->
    <TextView
        android:id="@+id/tvMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chế độ hiện tại: CHƯA TỐI ƯU"
        android:textSize="14sp"
        android:padding="4dp" />

    <!--    &lt;!&ndash; OTP nhận được &ndash;&gt;-->
    <!--    <TextView-->
    <!--        android:id="@+id/tvOtp"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="OTP nhận được: (chưa có)"-->
    <!--        android:textSize="16sp"-->
    <!--        android:padding="4dp" />-->

    <!-- Số lần receiver xử lý -->
    <TextView
        android:id="@+id/tvCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số lần receiver xử lý OTP: 0"
        android:textSize="16sp"
        android:padding="4dp" />

    <!-- Hàng nút -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="12dp">

        <Button
            android:id="@+id/btnToggleMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tối ưu: OFF" />

        <Button
            android:id="@+id/btnSendOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Gửi OTP giả" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Reset" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvOtpReceived"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Receiver:\n"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginTop="12dp"/>
</LinearLayout>
