<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demo Kotlin Features"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Lazy Evaluation &amp; Inline Functions)"
        android:textSize="16sp"
        android:textColor="#666"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kịch bản 1: Xử lý chuỗi danh sách lớn (Map -> Filter -> Find First)"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnStandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dùng Standard List (Chậm)"
        android:backgroundTint="#FF5722"/>

    <Button
        android:id="@+id/btnSequence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dùng Sequence (Nhanh - Lazy)"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kịch bản 2: Higher-Order Function (Lambda)"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnNoInline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hàm thường (Tạo Object Lambda)"
        android:backgroundTint="#FF5722"/>

    <Button
        android:id="@+id/btnInline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hàm Inline (Copy Code - Nhẹ RAM)"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kết quả sẽ hiển thị ở đây..."
        android:padding="16dp"
        android:background="#F0F0F0"
        android:textColor="#333"
        android:textSize="16sp"/>

</LinearLayout>