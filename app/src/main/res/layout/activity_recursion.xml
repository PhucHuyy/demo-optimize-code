<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề demo -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Demo khử đệ quy – Duyệt cây comment"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#212121" />

    <!-- Mô tả ngắn -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Nhập độ sâu cây comment (n), sau đó so sánh duyệt bằng Đệ quy và Vòng lặp (khử đệ quy). Kết quả sẽ hiển thị dạng thread comment thụt lề."
        android:textSize="13sp"
        android:textColor="#616161" />

    <!-- Độ sâu cây comment -->
    <EditText
        android:id="@+id/etInputN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Độ sâu cây comment (VD: 5, 50, 500)"
        android:inputType="number" />

    <!-- Hai nút chạy -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnRunRecursive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đệ quy" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnRunIterative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vòng lặp (khử đệ quy)" />
    </LinearLayout>

    <!-- Thông tin thống kê -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Chưa chạy demo."
        android:textSize="14sp"
        android:textColor="#000000" />

    <!-- Danh sách comment hiển thị (thread) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvComments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1" />

</LinearLayout>
